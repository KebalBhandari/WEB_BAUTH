@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .avatar-circle {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px; 
        height: 32px;
        background-color: #313a46;
        color: white;
        font-size: 16px;
        font-weight: bold;
    }
</style>
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Users Lists</li>
                            </ol>
                        </div>
                        <h4 class="page-title">List of System Users</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <div id="resultSection" class="mt-1">
                                            <table class="table table-centered mb-0">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>User Name</th>
                                                        <th>Email</th>
                                                        <th>Created Date</th>
                                                        <th>Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="userTableBody">
                                                    
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/ajaxcall.js"></script>
<script type="text/javascript">

    document.addEventListener('DOMContentLoaded', function() {
        getUsersListDetails();
    });

        async function getUsersListDetails() {
        const JsonUsersResult = await AjaxCallWithoutData("/Users/GetUsersResult");
        const tableBody = document.getElementById("userTableBody");
        tableBody.innerHTML = "";

        if (!JsonUsersResult || JsonUsersResult === "") {
            tableBody.innerHTML = `
                <tr>
                    <td colspan="4" class="text-center">No Data Found !!!</td>
                </tr>
            `;
        } else {
            let usersData = typeof JsonUsersResult === 'string' ? JSON.parse(JsonUsersResult) : JsonUsersResult;

            if (usersData.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center">No Data Found !!!</td>
                    </tr>
                `;
            } else {
                usersData.forEach(user => {
                    const createdDate = new Date(user.created_at).toLocaleDateString();
                    const firstLetter = user.username.charAt(0).toUpperCase();
                    const rowHtml = `
                        <tr>
                            <td class="table-user">
                                <span class="avatar-circle me-2 rounded-circle">${firstLetter}</span>
                                ${user.username}
                            </td>
                            <td>${user.email}</td>
                            <td>${createdDate}</td>
                            <td class="table-action">
                                <a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                                <a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                            </td>
                        </tr>
                    `;
                    tableBody.innerHTML += rowHtml;
                });
            }
        }
    };


</script>